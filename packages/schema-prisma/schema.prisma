datasource postgresql {
    url      = "postgresql://prisma:prisma@localhost"
    provider = "postgresql"
}

generator client {
    provider = "prisma-client-js"
    output   = "./dist"
}

model Exercise {
    id           Int      @id
    topic        String
    timeslot     Timeslot
    leaders      Person[] @relation("Exercise_Leader")
    participants Person[] @relation("Exercise_Participant")
}

model Person {
    id        Int        @id
    firstname String
    lastname  String
    exercises Exercise[] @relation("Exercise_Participant")
}

model Timeslot {
    id    Int      @id
    start DateTime
    end   DateTime
}