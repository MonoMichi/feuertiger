@inherits LayoutComponentBase

<RadzenLayout class="rz-shadow-3">
  <RadzenContextMenu />
  <RadzenDialog />
  <RadzenNotification />
  <RadzenTooltip />
  <RadzenHeader>
    <div class="d-flex align-items-center">
      <RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)"/>
      <RadzenLabel Text="Floriantine"/>
    </div>
  </RadzenHeader>
  <RadzenSidebar @bind-Expanded="@sidebarExpanded">
    <NavMenu />
  </RadzenSidebar>
  <RadzenBody>
    <div class="p-2">
      @Body
    </div>
  </RadzenBody>
  <RadzenFooter>Feuertiger Floriantine Test</RadzenFooter>
</RadzenLayout>

@code {
    bool sidebarExpanded = true;
}
