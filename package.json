{
    "name": "feuertiger",
    "private": true,
    "version": "1.0.0",
    "author": "Michael Thanei",
    "license": "MIT",
    "scripts": {
        "init": "yarn && feuertiger init",
        "format": "feuertiger format",
        "build": "feuertiger build",
        "lint": "feuertiger lint",
        "test": "feuertiger test",
        "e2e": "lerna run e2e --stream",
        "dev": "feuertiger dev",
        "dev:docker": "docker-compose up --build",
        "clean:node_modules": "git clean -fdx -e !node_modules",
        "clean:all": "yarn clean:db && git clean -fdX"
    },
    "workspaces": {
        "packages": [
            "packages/*",
            "services/*",
            "infrastructure",
            "deployment",
            "documentation",
            "config",
            "cli"
        ],
        "nohoist": [
            "**/html-minifier-terser"
        ]
    },
    "dependencies": {
        "@lerna/package-graph": "3.18.5",
        "@lerna/project": "3.21.0",
        "@typescript-eslint/eslint-plugin": "4.12.0",
        "@typescript-eslint/parser": "4.12.0",
        "babel-eslint": "10.1.0",
        "dotenv": "8.2.0",
        "eslint": "7.17.0",
        "eslint-config-airbnb-typescript": "12.0.0",
        "eslint-config-airbnb-typescript-prettier": "4.1.0",
        "eslint-config-prettier": "6.15.0",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-jsx-a11y": "6.4.1",
        "eslint-plugin-prettier": "3.3.1",
        "eslint-plugin-react": "7.22.0",
        "eslint-plugin-react-hooks": "4.2.0",
        "lerna": "3.22.1",
        "prettier": "2.2.1",
        "typescript": "4.1.3",
        "yarn": "1.22.10"
    },
    "devDependencies": {
        "@types/eslint": "7.2.6"
    }
}
