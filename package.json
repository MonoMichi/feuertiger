{
    "name": "feuertiger",
    "private": true,
    "version": "1.0.0",
    "author": "Michael Thanei",
    "license": "MIT",
    "scripts": {
        "init": "yarn && feuertiger init",
        "format": "feuertiger format",
        "build": "feuertiger build",
        "lint": "feuertiger lint",
        "test": "feuertiger test",
        "e2e": "lerna run e2e --stream",
        "dev": "feuertiger dev",
        "dev:docker": "docker-compose up --build",
        "clean:node_modules": "git clean -fdx -e !node_modules",
        "clean:all": "yarn clean:db && git clean -fdX"
    },
    "workspaces": {
        "packages": [
            "packages/*",
            "services/*",
            "infrastructure",
            "deployment",
            "documentation",
            "config",
            "cli"
        ],
        "nohoist": [
            "**/html-minifier-terser"
        ]
    },
    "dependencies": {
        "@lerna/package-graph": "4.0.0",
        "@lerna/project": "4.0.0",
        "@typescript-eslint/eslint-plugin": "5.4.0",
        "@typescript-eslint/parser": "5.4.0",
        "babel-eslint": "10.1.0",
        "dotenv": "10.0.0",
        "eslint": "8.2.0",
        "eslint-config-airbnb-typescript": "16.0.0",
        "eslint-config-airbnb-typescript-prettier": "4.2.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-import": "2.25.3",
        "eslint-plugin-jsx-a11y": "6.5.1",
        "eslint-plugin-prettier": "4.0.0",
        "eslint-plugin-react": "7.27.0",
        "eslint-plugin-react-hooks": "4.3.0",
        "lerna": "4.0.0",
        "prettier": "2.4.1",
        "typescript": "4.5.2",
        "yarn": "1.22.17"
    },
    "devDependencies": {
        "@types/eslint": "8.2.0"
    }
}
